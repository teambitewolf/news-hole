<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - News Hole</title>    
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/site")
    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/validation")
    @Scripts.Render("~/Scripts/bootstrap")
</head>
<body>
    <header>
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#headerNavbarContents">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">News Hole</a>
                </div>
                <div class="collapse navbar-collapse" id="headerNavbarContents">
                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Account Info", "Info", "Account")</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Login", "Login", "Account")</li>
                            <li>@Html.ActionLink("Create Account", "Create", "Account")</li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @if (User.Identity.IsAuthenticated)
    {
        <ul class="nav nav-pills nav-stacked left-menu">
            <li class="btn btn-primary">Test 1</li>
            <li class="btn">Test 2</li>
            <li class="btn">Test 3</li>
        </ul>
    }
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>